<UserControl x:Class="Pages.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Content/SettingsAppearance.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="appearance" Source="/Content/SettingsAppearance.xaml" />
                <mui:Link DisplayName="Microsoft Public License" Source="/Content/Ms-PL.xaml" />
                <mui:Link DisplayName="about" Source="/Content/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>