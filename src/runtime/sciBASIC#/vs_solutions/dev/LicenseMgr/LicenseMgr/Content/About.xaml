<UserControl x:Class="Content.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="ABOUT" Style="{StaticResource Heading2}" />
                <mui:BBCodeBlock BBCode="Source code license manager for Microsoft VisualBasic." />
                <mui:BBCodeBlock BBCode="Author: asuka ([url=mailto://amethyst.asuka@gcmodeller.org]amethyst.asuka@gcmodeller.org[/url])" />
                <mui:BBCodeBlock BBCode="View on github: [url=https://github.com/amethyst-asuka/VisualBasic_AppFramework]https://github.com/amethyst-asuka/VisualBasic_AppFramework[/url]." />
            </StackPanel>
        </ScrollViewer>
