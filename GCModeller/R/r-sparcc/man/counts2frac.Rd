## The function is currently defined as
function (x, method = "dirichlet") 
{
    xsize <- dim(x)
    fracs <- matrix(1/xsize[2], nrow = xsize[1], ncol = xsize[2])
    if (method == "dirichlet") {
        fracs.t <- apply(x, 1, function(y) {
            rdirichlet(1, y + 1)
        })
        fracs <- t(fracs.t)
    }
    return(fracs)
  }
}
